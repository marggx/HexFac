{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "Node",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@core/*": ["src/core/*"],
            "@utils/*": ["src/core/utils/*"],
            "@render/*": ["src/core/render/*"],
            "@game/*": ["src/game/*"],
            "@models/*": ["src/game/models/*"],
            "@gamecore/*": ["src/game/core/*"]
        }
    },
    "include": ["src"]
}
